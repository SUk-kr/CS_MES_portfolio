<Window x:Class="MES.Solution.Views.ProductionPlanAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="생산계획 등록"
        Width="800"
        Height="600"
        AllowsTransparency="True"
        Background="Transparent"
        KeyDown="Window_KeyDown"
        MouseDown="Window_MouseDown"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None">

    <Border Margin="10"
            Background="White"
            CornerRadius="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15"
                              Direction="-90"
                              Opacity="0.2"
                              ShadowDepth="2" />
        </Border.Effect>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <!--  제어 버튼 영역  -->
                <RowDefinition Height="Auto" />
                <!--  제목 영역  -->
                <RowDefinition Height="*" />
                <!--  입력 폼 영역  -->
                <RowDefinition Height="Auto" />
                <!--  버튼 영역  -->
            </Grid.RowDefinitions>

            <!--  제어 버튼 영역  -->
            <Grid>
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button x:Name="BtnMinimize"
                            Width="40"
                            Height="40"
                            Margin="0,0,5,0"
                            Click="BtnMinimize_Click"
                            Content="−"
                            FontSize="20"
                            Style="{StaticResource IconButtonStyle}" />

                    <Button x:Name="BtnClose"
                            Width="40"
                            Height="40"
                            Click="BtnClose_Click"
                            Content="×"
                            FontSize="20"
                            Style="{StaticResource IconButtonStyle}" />
                </StackPanel>
            </Grid>

            <!--  제목  -->
            <TextBlock Grid.Row="1"
                       Margin="0,0,0,20"
                       FontSize="24"
                       FontWeight="Bold"
                       Text="{Binding WindowTitle}" />

            <!--  입력 폼  -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  생산일자  -->
                <TextBlock Grid.Row="0"
                           Grid.Column="0"
                           Margin="0,0,10,15"
                           VerticalAlignment="Center"
                           FontSize="13"
                           Text="생산일자" />
                <DatePicker Grid.Row="0"
                            Grid.Column="1"
                            Margin="0,0,20,15"
                            FontSize="13"
                            SelectedDate="{Binding ProductionDate}" />

                <!--  생산라인  -->
                <TextBlock Grid.Row="0"
                           Grid.Column="2"
                           Margin="0,0,10,15"
                           VerticalAlignment="Center"
                           FontSize="13"
                           Text="생산라인" />
                <ComboBox Grid.Row="0"
                          Grid.Column="3"
                          Margin="0,0,0,15"
                          FontSize="13"
                          ItemsSource="{Binding ProductionLines}"
                          SelectedItem="{Binding SelectedProductionLine}" />

                <!--  제품  -->
                <TextBlock Grid.Row="1"
                           Grid.Column="0"
                           Margin="0,0,10,15"
                           VerticalAlignment="Center"
                           FontSize="13"
                           Text="제품" />
                <ComboBox Grid.Row="1"
                          Grid.Column="1"
                          Margin="0,0,20,15"
                          DisplayMemberPath="ProductName"
                          FontSize="13"
                          ItemsSource="{Binding Products}"
                          SelectedItem="{Binding SelectedProduct}" />

                <!--  지시수량  -->
                <TextBlock Grid.Row="1"
                           Grid.Column="2"
                           Margin="0,0,10,15"
                           VerticalAlignment="Center"
                           FontSize="13"
                           Text="지시수량" />
                <TextBox Grid.Row="1"
                         Grid.Column="3"
                         Margin="0,0,0,15"
                         FontSize="13"
                         PreviewTextInput="NumberValidationTextBox"
                         Text="{Binding OrderQuantity, UpdateSourceTrigger=PropertyChanged}" />

                <!--  근무조  -->
                <TextBlock Grid.Row="2"
                           Grid.Column="0"
                           Margin="0,0,10,15"
                           VerticalAlignment="Center"
                           FontSize="13"
                           Text="근무조" />
                <ComboBox Grid.Row="2"
                          Grid.Column="1"
                          Margin="0,0,20,15"
                          FontSize="13"
                          ItemsSource="{Binding WorkShifts}"
                          SelectedItem="{Binding SelectedWorkShift}" />

                <!--  비고  -->
                <TextBlock Grid.Row="3"
                           Grid.Column="0"
                           Margin="0,0,10,15"
                           VerticalAlignment="Top"
                           FontSize="13"
                           Text="비고" />
                <TextBox Grid.Row="3"
                         Grid.Column="1"
                         Grid.ColumnSpan="3"
                         Height="60"
                         Margin="0,0,0,15"
                         VerticalAlignment="Top"
                         AcceptsReturn="True"
                         FontSize="13"
                         Text="{Binding Remarks, UpdateSourceTrigger=PropertyChanged}"
                         TextWrapping="Wrap" />

                <!--  에러 메시지  -->
                <TextBlock Grid.Row="4"
                           Grid.Column="0"
                           Grid.ColumnSpan="4"
                           FontSize="13"
                           Foreground="Red"
                           Text="{Binding ErrorMessage}"
                           TextWrapping="Wrap"
                           Visibility="{Binding HasError, Converter={StaticResource BoolToVis}}" />
            </Grid>

            <!--  버튼 영역  -->
            <StackPanel Grid.Row="3"
                        Margin="0,20,0,0"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                <Button Width="100"
                        Height="35"
                        Margin="0,0,10,0"
                        Command="{Binding SaveCommand}"
                        Content="저장"
                        Style="{StaticResource RoundedButtonStyle}" />
                <Button Width="100"
                        Height="35"
                        Command="{Binding CancelCommand}"
                        Content="취소"
                        Style="{StaticResource RoundedButtonStyle}" />
            </StackPanel>
        </Grid>
    </Border>
</Window>